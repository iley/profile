bzl() {
  local werkstatt=$(git rev-parse --show-toplevel)
  "$werkstatt/tools/docker/bazel.py" "$@"
}

alias run-in-docker=$HOME/werkstatt/tools/docker/run_in_docker.sh
alias bgdb=$HOME/werkstatt/tools/docker/bazel_gdbserver.sh
alias killallrunning=$HOME/werkstatt/tools/docker/killrunning.sh

export RTI_LICENSE_FILE=$HOME/rti_license.dat

alias jw='cd $HOME/werkstatt'
