# vim: ft=gitconfig
[alias]
st = status -sb
lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
purr = pull --rebase
puff = pull --ff-only
please = push --force-with-lease

[color]
diff = auto
interactive = auto
status = auto
branch = auto
ui = true

[core]
pager = less -+F -+X
excludesfile = ~/.gitignore_global

[push]
default = current

[help]
autocorrect = 20

[http "https://gopkg.in"]
followRedirects = true
