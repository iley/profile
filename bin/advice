#!/usr/bin/perl

use strict;
use warnings;
use utf8;

use JSON;
use LWP::Simple;
use HTML::Entities;
use Desktop::Notify;

my $advice = from_json(get "http://fucking-great-advice.ru/api/random");

my $notify = Desktop::Notify->new();
my $notification = $notify->create(summary => 'Совет',
  body => decode_entities($advice->{'text'}),
  timeout => 5000);
$notification->show();
$notification->close();
