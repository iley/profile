#!/usr/bin/env python
from sys import argv
from urllib import urlencode
import subprocess

BROWSER="surf"

def main(words):
    url = "http://google.com"
    if words:
        url += "/search?" + urlencode({ "q": " ".join(words) })
    subprocess.call("{} {}".format(BROWSER, url), shell=True)

if __name__ == '__main__':
    main(argv[1:])
